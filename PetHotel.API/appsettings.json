{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=./data/PetHotel.db"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "PetHotelAPI",
    "Audience": "PetHotelClient",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "LocalFileStorage": {
    "PublicBasePath": "",
    "PrivateBasePath": ""
  },

  "EmailSettings": {
    "SmtpServer": "",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromEmail": "",
    "FromName": "PetHotel",
    "EnableSsl": true,
    "FrontendUrl": "",
    "SupportEmail": ""
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Swagger": {
    "Enabled": true
  },
  "Seed": {
    "Enabled": false
  },
  "Cors": {
    "AllowedOrigins": []
  },
  "SecurityHeaders": {
    "Enabled": true
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Forwarded-For",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "QuotaExceededResponse": {
      "Content": "{ \"error\": \"Too many requests. Please try again later.\", \"retryAfter\": \"{0}\" }",
      "ContentType": "application/json",
      "StatusCode": 429
    },
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      },
      {
        "Endpoint": "post:/api/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "post:/api/auth/login",
        "Period": "1h",
        "Limit": 20
      },
      {
        "Endpoint": "post:/api/auth/register",
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "post:/api/auth/register",
        "Period": "1h",
        "Limit": 10
      },
      {
        "Endpoint": "post:/api/auth/register-organization",
        "Period": "1m",
        "Limit": 2
      },
      {
        "Endpoint": "post:/api/auth/register-organization",
        "Period": "1h",
        "Limit": 5
      },
      {
        "Endpoint": "post:/api/auth/forgot-password",
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "post:/api/auth/forgot-password",
        "Period": "1h",
        "Limit": 10
      },
      {
        "Endpoint": "post:/api/auth/reset-password",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "post:/api/auth/refresh",
        "Period": "1m",
        "Limit": 10
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": []
  }
}
