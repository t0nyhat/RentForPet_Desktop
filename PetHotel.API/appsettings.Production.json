{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=./data/PetHotel.db"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "PetHotelAPI",
    "Audience": "PetHotelClient",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "LocalFileStorage": {
    "PublicBasePath": "",
    "PrivateBasePath": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Swagger": {
    "Enabled": false
  },
  "Seed": {
    "Enabled": true
  },
  "Cors": {
    "AllowedOrigins": []
  },
  "SecurityHeaders": {
    "Enabled": true
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Forwarded-For",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "QuotaExceededResponse": {
      "Content": "{ \"error\": \"Too many requests. Please try again later.\", \"retryAfter\": \"{0}\" }",
      "ContentType": "application/json",
      "StatusCode": 429
    },
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": []
  }
}